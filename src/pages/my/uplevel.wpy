<template>
  <view class="my-up-level">
       <view class="my-info">
          <view class="lf">
            <image src="{{heroInfo.HeadImg}}" mode="scaleToFill" />
          <view class="level-com-icon level-{{userLevel.thisRank}}" wx:if="{{heroInfo.Level}}">{{(heroInfo.Level)}}</view>          
          </view>
          <view class="rt">
            <view class="rt-name">{{heroInfo.UserName}}</view>
            <view class="rt-tip" >{{userLevel.Power?('战斗值：'+ userLevel.Power):''}}</view>
            <view class="power-info">
                <text style="padding-left:10rpx;">{{userLevel.thisPower}}</text>
                <text style="padding-right:10rpx;">{{userLevel.nextPower}}</text>
              </view>
             <view class="rt-mid">
              <view class="progress" style="width:{{precent}}"></view>
            </view>
            <view class="rt-btm">
                <view class="now">
                    <text>{{userLevel.thisRank}}级</text>
                    <text>{{userLevel.thisLevel}}</text>
                </view>
                <view class="next">
                    <text>{{userLevel.nextRank}}级</text>
                    <text>{{userLevel.nextLevel}}</text>
                </view>
            </view>
          </view>
      </view>
       <image class="l-title" src="../../static/img/my/titl.png" mode="aspectFit" />
       <!-- <scroll-view scroll-y style="height: 680rpx;" > -->
       <repeat for="{{listArr}}" key="index" index="index" item="item">
       <view class="level-item">
           <view class="level-bg level-{{(index+1)}}">
              <image  src="{{imgHost + item.Pic}}" mode="aspectFit"  />
           </view>
           <view class="level-rt-tip" wx:if="{{index%2==0}}">
               <view class="l-name">{{item.Level}}</view>
               <view class="l-value">{{'战斗值≥'+item.Power1}}</view>
           </view>
           <view class="level-lf-tip" wx:else>
                <view class="l-name">{{item.Level}}</view>
               <view class="l-value">{{'战斗值≥'+item.Power1}}</view>
           </view>
       </view>
       </repeat>
       <!-- </scroll-view> -->
  </view>
</template>

<script>
import wepy from 'wepy';
import wxRequest from "../../util/wxRequest.js";
export default class myUpLevel extends wepy.page {
  config = {
    navigationBarTitleText: '怎么进级'
  };
  components = {};
  data = {
    listArr:  [],
    userLevel:{},
    precent:"0%",
  };

 computed = {
    heroInfo(){
        return this.$parent.globalData.HeroInfo
    },
    imgHost(){
        return this.$parent.globalData.imgHost
    }
  };

  methods = {};

  events = {};
  async getVocationLevel() {
    const that = this;
    const res = await wxRequest({
      query:{
        opt: 'getVocationLevel',
        // 骑士、战士、射手、法师、术士、修士
        vocation:that.heroInfo.Vocation
      }
      },that.$parent.globalData.apiUrl);
   if (res.data.retcode == 0) {
        this.listArr=res.data.result;
    }else {

    }
    this.$apply();
  }
  async getUserLevelRank() {
    const that = this;
    const res = await wxRequest({
      query:{
        opt: 'getUserLevelRank',
        Userid:that.heroInfo.Id
      }
      },that.$parent.globalData.apiUrl);
   if (res.data.retcode == 0) {
        this.userLevel=res.data.result;
        this.precent=(this.userLevel.thisPower/this.userLevel.nextPower)*100+"%"
    }
    this.$apply();
  }
  
  onLoad() {
    this.getVocationLevel();
    this.getUserLevelRank()
  }
}
</script>
