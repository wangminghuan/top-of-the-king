  padding: 0 38rpx;
  // position: absolute;
  // top: 50%;
  // transform: translateY(-50%);
  // left: 0;
  // right: 0;
  margin: 0 auto;
  .user-input {
    display: flex;
    justify-content: space-between;
    width: 100%;
    height: 94rpx;
    align-items: center;
    background-color: #1e3462;
    margin: 0 auto;
    font-size: 32rpx;
    text {
      padding-left: 35rpx;
      color: #8bbbd2;
    }
    input {
      width: 420rpx;
      color: #fff;
      margin-right: 35rpx;
    }
  }
  .apply-input {
    height: auto;
    align-items: inherit;
    padding: 24rpx 0;
    textarea {
      height: 526rpx;
      width: 490rpx;
      color: #fff;
      margin-right: 35rpx;
      line-height: 30rpx;
    }
  }
  .up-img {
    display: flex;
    justify-content: flex-end;
    padding: 20rpx 0;
    margin-right: 35rpx;
  }
  .imglist{
        display: flex;
        justify-content: flex-start;
        flex-wrap: wrap;
        .img-item{
          position: relative;
           margin-top:20rpx;
        }
        image{
          width: 210rpx;
          height: 210rpx;
          position: relative;
        }
        .close{
          width: 40rpx;
          height: 40rpx;
            background-image: url('data:image/png;base64,');
             background-size: cover;
            background-repeat: no-repeat;
            position: absolute;
            top:-20rpx;
            right: -20rpx;
            z-index: 999;
        }
        .img-item.mids{
          margin-left:20rpx;
          margin-right:20rpx;
        }
      }
}
</style>
<template>
  <view class="feed-back-wrap" >
    <view class="login-com-title" style="margin-bottom:52rpx;">意见反馈</view>
    <view class="user-input"><text>意见标题：</text><input type="text" autoFocus bindinput="bindInputTitle" placeholder="请输入标题" /></view>
    <view style="margin-top:36rpx;margin-bottom:86rpx;background-color: #1e3462;">
        <view class="user-input apply-input" >
            <text>内容：</text><textarea bindinput="bindInputTxt" placeholder="请至少输入五个字" />
        </view>
        <view class="imglist">
             <repeat for="{{tempFilePaths}}" key="sindex" index="sindex" item="sitem">
                 <view class="{{sindex%3==1?'img-item mids':'img-item'}}">
                   <image  @tap="handlePreviewImg({{sitem}})" src="{{sitem}}" mode="scaleToFill" />
                   <view class="close" @tap.stop="handleDelectImg({{sindex}})"></view>
                  </view>
              </repeat>
        </view>
        <view class="up-img" @tap="handleChooseImg">
            <image src="../../static/img/login/upimg.png" mode="aspectFit" style="width:39rpx;height:34rpx;"/>
        </view>
        </view>
    <button class="user-com-btn" @tap="handleSubmit" style="width:394rpx;margin-bottom:40rpx;">发表</button>
  </view>
  
</template>

<script>
import wepy from 'wepy';
import wxRequest from "../../util/wxRequest.js";
export default class dynamicsAdd  extends wepy.page {
  config = {
    navigationBarTitleText: '意见反馈'
  };
  components = {};
  data = {
    inputTitle:"",
    inputTxt:"",
    tempFilePaths:[]
  };

  computed = {
    heroInfo(){
        return this.$parent.globalData.HeroInfo
    }
  };

  methods = {
    bindInputTitle(e) {
      this.inputTitle= e.detail.value;
    },
    bindInputTxt(e){
     this.inputTxt= e.detail.value;
    },
    handleChooseImg(){
      if( this.tempFilePaths.length>=6){
         wx.showToast({
            title: "超出最大数量限制",
            icon: 'none',
            duration: 2000
          });
        return
      }
      const that=this;
        wx.chooseImage({
          count: 1, // 默认9
          sizeType: ['original', 'compressed'], // 可以指定是原图还是压缩图，默认二者都有
          sourceType: ['album', 'camera'], // 可以指定来源是相册还是相机，默认二者都有
          success: function (res) {
            // 返回选定照片的本地文件路径列表，tempFilePath可以作为img标签的src属性显示图片
            that.tempFilePaths.push(res.tempFilePaths[0]);
            that.$apply();
          }
        })
    },
    handleDelectImg(inx){
       this.tempFilePaths.splice(inx,1)
    },
    handlePreviewImg(url){
       const that=this;
        wx.previewImage({
        current: url, // 当前显示图片的http链接
        urls: that.tempFilePaths // 需要预览的图片http链接列表
      }) 
    },
    handleSubmit(){
      if(this.inputTitle.replace(/\s+/g,'')==''){
         wx.showToast({
            title: "请输入标题",
            icon: 'none',
            duration: 2000
          });
        return ;
      }else if(this.inputTxt.replace(/\s+/g,'').length<6){
         wx.showToast({
            title: "内容过短，请重新输入",
            icon: 'none',
            duration: 2000
          });
        return ;
      }
      this.addNPC()

    }
  };

  events = {};
  uploadFiles(id){
    wx.showToast({  
        title: '正在上传...',  
        icon: 'loading',  
        mask: true,  
        duration: 10000  
      }) 
    var uploadImgCount = 0;  
    const that=this;
    for (var i = 0, h = that.tempFilePaths.length; i < h; i++) { 
      wx.uploadFile({
            url: that.$parent.globalData.apiUrl, //仅为示例，非真实的接口地址
            filePath: that.tempFilePaths[i],
            name: 'file',
            formData:{
              'opt':'uploadNPCPic',
              'npcid': id, 
              'imgIndex': i
            },
            header: {  
              "Content-Type": "multipart/form-data"  
            },  
            success: function(res){
              uploadImgCount++;  
              if (uploadImgCount == that.tempFilePaths.length) {  
                   wx.hideToast();  
                   wx.showToast({
                    title: '提交成功，请耐先等待核审',
                    icon: 'success',
                    duration: 2000
                  });
                  setTimeout(() => {
                    //返回上一页
                    wx.navigateBack({
                        delta: 1
                      })
                  }, 2000);
              }  
              //do something
            },
            fail: function (res) { 
                 that.$parent.showErrorMsg("错误提示",'上传图片失败'); 
            }
      })
    }
  }
  async addNPC() {
    const that = this;
    const res = await wxRequest({
      query:{
        opt: 'addNPC',
        userid:that.heroInfo.Id, 
        name:that.inputTitle,
        txt:that.inputTxt, 
      }
      },that.$parent.globalData.apiUrl);
    if (res.data.retcode == 0) {
         that.uploadFiles(res.data.result.Id);
    }else {
       this.$parent.showErrorMsg("错误提示", res.data.msg);
    }
  }
  onLoad(){
  }
}
</script>
