               <image class="btn-bg" src="{{item.Id==1?'../../static/img/rank/gift-big-3.png':item.Id==6?'../../static/img/rank/gift-big-2.png':item.Id==7?'../../static/img/rank/gift-big-4.png':'../../static/img/rank/gift-big-1.png'}}" mode="scaleToFill" />
